--easing
--(point1,point2,percentage)
function ease_out_quart(p1,p2,t)
 if(t<.5)then
  return p1+(8*t*t*t*t)*(p2-p1)
 else
  t-=1
  return p1+(1-8*t*t*t*t)*(p2-p1)
 end
end
